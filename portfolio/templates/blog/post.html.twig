{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('bundles/ckeditor_mybuild/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css') }}" rel="stylesheet">
    {{ encore_entry_link_tags('post') }}
{% endblock %}
{% block body %}
    <div class="container mx-auto max-w-6xl px-6">
        <h1>{{ post.title }}</h1>
        <div class="flex items-center">
        <p class="italic text-sm mr-1">Publié le {{ post.publishedAt | date('d/m/Y') }} - Modifié le {{ post.updatedAt | date('d/m/Y') }} - </p>
        {% for tag in post.tags %}
            <a href="#" class="tag">{{ tag.name }}</a>
        {% endfor %}
        </div>
        <div class="line"></div>
        {{ post.content | raw }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('post') }}
    <script src="{{ asset('bundles/ckeditor_mybuild/plugins/codesnippet/lib/highlight/highlight.pack.js') }}"></script>
    <script>
        hljs.initHighlightingOnLoad();
    </script>
{% endblock %}
