{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block meta %}
    <meta name="robots" content="index, follow"/>
{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('codesnippet/lib/highlight/styles/monokai_sublime.css') }}" rel="stylesheet">
    {{ encore_entry_link_tags('post') }}
{% endblock %}
{% block description %}{{ post.title }} - Publié le {{ post.publishedAt | date('d/m/Y') }}{% if post.updatedAt is not null %} - Modifié le {{ post.updatedAt | date('d/m/Y') }}{% endif %}{% endblock %}
{% block body %}
    <div class="container mx-auto max-w-6xl px-6">
        <h1>{{ post.title }}</h1>
        <div class="flex flex-col">
            <div class="flex items-center mb-2">
                <p class="italic text-sm mr-1">Publié le {{ post.publishedAt | date('d/m/Y') }}{% if post.updatedAt is not null %} - Modifié le {{ post.updatedAt | date('d/m/Y') }}{% endif %}</p>
            </div>
            <div>
                {% for tag in post.tags %}
                    <a href="#" class="tag">{{ tag.name }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="line"></div>
        <p>{{ post.content | raw }}</p>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('post') }}
    <script src="{{ asset('codesnippet/lib/highlight/highlight.pack.js') }}"></script>
    <script>
        hljs.initHighlightingOnLoad();
    </script>
{% endblock %}
